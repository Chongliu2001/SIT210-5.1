import tkinter as tk
from gpiozero import LED

# Setup the LEDs
red_led = LED(2)
green_led = LED(3)
blue_led = LED(4)

# Create the main window
root = tk.Tk()
root.title("LED Controller")

# Function to turn off all LEDs
def all_off():
    red_led.off()
    green_led.off()
    blue_led.off()

# Function to control LEDs
def control_led(led):
    all_off()  # Turn off all LEDs first
    if led == 'red':
        red_led.on()
    elif led == 'green':
        green_led.on()
    elif led == 'blue':
        blue_led.on()

# Create radio buttons to control LEDs
led_choice = tk.StringVar()
tk.Radiobutton(root, text="Red", variable=led_choice, value='red', command=lambda: control_led('red')).pack(anchor=tk.W)
tk.Radiobutton(root, text="Green", variable=led_choice, value='green', command=lambda: control_led('green')).pack(anchor=tk.W)
tk.Radiobutton(root, text="Blue", variable=led_choice, value='blue', command=lambda: control_led('blue')).pack(anchor=tk.W)

# Button to exit the program
tk.Button(root, text="Exit", command=root.destroy).pack()

# Run the application
root.mainloop()
